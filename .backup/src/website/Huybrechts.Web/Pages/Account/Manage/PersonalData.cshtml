@page
@inject IViewLocalizer Localizer
@model PersonalDataModel
@{
    ViewData["CardTitle"] = Localizer["Personal Data"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row">
    <div class="col-md-6">
        <p>@Localizer["Your account contains personal data that you have given us. This page allows you to download or delete that data."]</p>
        <p>
            <strong>@Localizer["Deleting this data will permanently remove your account, and this cannot be recovered."]</strong>
        </p>
        <p>
            @Localizer["Data created in a team will only be deleted when the team is deleted. Even if you created that data."]
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="w-100 btn btn-primary" type="submit">@Localizer["Download"]</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-danger">@Localizer["Delete"]</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
