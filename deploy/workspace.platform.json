{
  "deploy": {
    "name": "Platform Workspace",
    "version": "1.0.0",
    "description": "Workspace deployment configuration for the shared Platform."
  },
  "paths": [
    { "type": "config", "path": "/${service}/config" },
    { "type": "data",   "path": "/${service}/data" },
    { "type": "logs",   "path": "/${service}/logs" },
    { "type": "serve",  "path": "/${service}/serve" }
  ],
  "servers": [
    {
      "id": "manager-1",
      "labels": [],
      "disks": [
        { "size": 20, "label": "manager-1-os" }
      ],
      "mounts": [
        { "type": "config", "disk": 0 },
        { "type": "data", "disk": 0 },
        { "type": "logs", "disk": 0 },
        { "type": "serve", "disk": 0 }
      ]
    },
    {
      "id": "infra-1",
      "labels": [ "postgres=true" ],
      "disks": [
        { "size": 20, "label": "infra-1-os" },
        { "size": 40, "label": "infra-1-data" }
      ],
      "mounts": [
        { "type": "config", "disk": 1 },
        { "type": "data", "disk": 1 },
        { "type": "logs", "disk": 1 },
        { "type": "serve", "disk": 1 }
      ]
    },
    {
      "id": "infra-2",
      "labels": [],
      "disks": [
        { "size": 20, "label": "infra-2-os" },
        { "size": 40, "label": "infra-2-data" }
      ],
      "mounts": [
        { "type": "config", "disk": 1 },
        { "type": "data", "disk": 1 },
        { "type": "logs", "disk": 1 },
        { "type": "serve", "disk": 1 }
      ]
    },
    {
      "id": "worker-1",
      "labels": [],
      "disks": [
        { "size": 20, "label": "worker-1-os" }
      ],      
      "mounts": [
        { "type": "config", "disk": 0 },
        { "type": "data", "disk": 0 },
        { "type": "logs", "disk": 0 },
        { "type": "serve", "disk": 0 }
      ]
    },
    {
      "id": "worker-2",
      "labels": [],
      "disks": [
        { "size": 20, "label": "worker-2-os" }
      ],
      "mounts": [
        { "type": "config", "disk": 0 },
        { "type": "data", "disk": 0 },
        { "type": "logs", "disk": 0 },
        { "type": "serve", "disk": 0 }
      ]
    }
  ]
}