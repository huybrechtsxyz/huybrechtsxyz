    },
    {
      "id": "loki",
      "name": "loki",
      "address": "loki",
      "port": 3100,
      "meta": {},
      "checks": [
        {
          "id": "loki-http-check",
          "name": "Loki Health Check",
          "http": "http://loki:3100/health",
          "interval": "30s",
          "timeout": "5s"
        }
      ],
      "tags": [ "loki","logging","metrics","tracing","docker-swarm","system" ]
    }
  ]
}