{
  "Application": {
    "Name": "Huybrechts Landing",
    "Version": "1.0.0",
    "Environment": "Development", // Options: Development, Staging, Production
    "BaseUrl": "https://www.example.com", // The base URL of the application
    "Description": "This is a sample ASP.NET application with a friendly name.", // A description for display or logs
    "SupportEmail": "support@example.com", // Support contact for application issues
    "EnableFeatureX": true, // Toggle for experimental or optional features
    "MaxRequestSize": 1048576, // Max request size in bytes (1 MB example)
    "MaintenanceMode": false, // Set to true to put the application in maintenance mode
    "Locale": "en-US", // Default locale for the application
    "SupportedCultures": [ "en-US", "fr-FR", "es-ES" ], // List of supported languages/cultures
    "ApiVersion": "v1", // Current API version for the app
    "DateFormat": "yyyy-MM-dd", // Default date format across the application
    "TimeZone": "UTC", // Default time zone setting for the application
    "Security": {
      "EnforceHttps": true, // Enforce HTTPS across the application
      "AllowedHosts": [ "www.example.com", "example.com" ], // Allowed hosts for request validation
      "ContentSecurityPolicy": "default-src 'self'; script-src 'self' https://trustedscripts.example.com"
    },
    "Logging": {
      "EnableFileLogging": true, // Enable or disable file logging
      "LogFilePath": "/logs/app.log" // Path for application logs
    },
    "Analytics": {
      "EnableAnalytics": true, // Toggle analytics tracking
      "TrackingId": "UA-XXXXXXXXX-1" // Google Analytics or similar tracking ID
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "Console" }
          ]
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Information"
      }
    }
  }
}
