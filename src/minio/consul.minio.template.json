{
  "services": [
    {
      "id": "minio-data-${MINIO_INSTANCE}",
      "name": "minio-data-${MINIO_INSTANCE}",
      "address": "minio-${MINIO_INSTANCE}",
      "port": 9000,
      "meta": {
        "prometheus_path": "/minio/metrics"
      },
      "checks": [
        {
          "id": "minio-http-check",
          "name": "MinIO Health Check",
          "http": "http://minio-${MINIO_INSTANCE}:9000/minio/health/live",
          "interval": "60s",
          "timeout": "15s"
        }
      ],
      "tags": [ "minio","storage","object-store","data","docker-swarm","system" ]
    },
    {
      "id": "minio-ui",
      "name": "minio-ui",
      "address": "minio-${MINIO_INSTANCE}",
      "port": 9001,
      "meta": {},
      "checks": [
        {
          "id": "minio-ui-http-check",
          "name": "MinIO UI Health Check",
          "http": "http://minio-${MINIO_INSTANCE}:9001",
          "interval": "60s",
          "timeout": "15s"
        }
      ],
      "tags": [ "minio","storage","object-store","data","docker-swarm","system" ]
    }
  ]
}