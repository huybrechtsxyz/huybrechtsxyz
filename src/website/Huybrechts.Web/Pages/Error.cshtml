@page "/Error"
@inject IViewLocalizer Localizer
@model Huybrechts.Web.Pages.ErrorModel
@{
    Layout = null;
    ViewData["Title"] = "Error";
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark" data-scheme="navy">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8; ie=edge">
    <meta name="description" content="Error for Huybrechts.XYZ">
    <meta name="keywords" content="error">
    <meta name="author" content="Vincent Huybrechts">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <title>Error</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&family=Ubuntu:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="./lib/bootstrap/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="./lib/nifty/css/nifty.min.css">
    <link rel="stylesheet" href="./lib/nifty/css/icons.min.css">
</head>
<body class="out-quart">
    <div id="root" class="root mn--max tm--expanded-hd">
        <section id="content" class="content">
            <div class="content__header content__boxed overlapping">
                <div class="content__wrap">
                    <h1 class="error-code page-title text-center mb-2 mt-4">@Localizer["Error"] @Model.ErrorCode</h1>
                    <h3 class="error-code page-title text-center mb-2 mt-4">@Model.ErrorText</h3>
                    <p></p>
                    <p class="lead text-center">@Localizer["Description"]</p>
                    <p></p>
                    <div class="d-flex flex-wrap gap-2 justify-content-center mt-4 mb-4">
                        @if (Model.ShowRequestId)
                        {
                            <p>
                                <strong>@Localizer["Request ID:"]</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                    </div>
                </div>
            </div>
            
        </section>
        <header class="header">
            <div class="header__inner">
                <div class="header__brand">
                    <div class="brand-wrap">
                        <a asp-page="Index" class="brand-img stretched-link">
                            <img src="./img/logo.png" alt="XYZ Logo" class="Nifty logo" width="32" height="32">
                        </a>
                        <div class="brand-title"><span class="logo">Huybrechts <span> XYZ</span></span></div>

                    </div>
                </div>

                <div class="header__content">
                    <div class="header__content-start">
                        <div class="vr mx-1 d-none d-md-block"></div>
                    </div>

                    <div class="header__content-end">

                        <div class="vr mx-1 d-none d-md-block"></div>

                        <div class="form-check form-check-alt form-switch mx-md-2">
                            <input id="headerThemeToggler" class="form-check-input mode-switcher" type="checkbox" role="switch">
                            <label class="form-check-label ps-1 fw-bold d-none d-md-flex align-items-center " for="headerThemeToggler">
                                <i class="mode-switcher-icon icon-light demo-psi-sun fs-5"></i>
                                <i class="mode-switcher-icon icon-dark d-none demo-psi-half-moon"></i>
                            </label>
                        </div>

                        <div class="vr mx-1 d-none d-md-block"></div>

                    </div>
                </div>
            </div>
        </header>
    </div>
    <script src="./lib/popperjs/popper.min.js"></script>
    <script src="./lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="./lib/nifty/js/nifty.js"></script>
</body>
</html>
