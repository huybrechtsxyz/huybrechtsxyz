@page
@model TenantsModel
@{
    ViewData["Title"] = "Your tenants";
    ViewData["ActivePage"] = ManageNavPages.UserTenants;
}

<h3>@ViewData["Title"]</h3>
@if (Model.Tenants.Count > 0)
{
    <p class="text-info">
    The list of tenants you are part of.
    </p>
}
else
{
    <p class="text-info">
    You are not part of any tenant. You need at least one tenant if you wish to use the application!
    </p>
}
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <p>
            
        </p>
        @if (Model.Tenants.Count > 0)
        {
            <table class="table table-responsive">
                <tr>
                    <th></th>
                    <th>@Html.DisplayNameFor(model => model.Tenants[0].Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Tenants[0].Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Tenants[0].State)</th>
                    <th>@Html.DisplayNameFor(model => model.Tenants[0].Description)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Tenants)
                {
                    <tr>
                        <td>
                            @{
                                string source = string.Empty;
                                if (item is not null && item.Picture is not null)
                                    source = $"data:image/*;base64,{Convert.ToBase64String(item.Picture)}";
                                else
                                    source = "/img/community.png";
                            }
                            <img src="@source" class="rounded-circle" style="width:32px;height:32px; object-fit:cover; border-radius:30px" alt="" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item!.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item!.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item!.State)</td>
                        <td>@Html.DisplayFor(modelItem => item!.Description)</td>
                        <td>
                            <a asp-page="./TenantCard" asp-route-id="@item!.Id">Card</a>
                            @if(item.State == Core.Application.ApplicationTenantState.New
                            || item.State == Core.Application.ApplicationTenantState.Disabled)
                            {
                                <a asp-page="./TenantActivate" asp-route-id="@item!.Id">Activate</a>
                            }
                            @if (item.State == Core.Application.ApplicationTenantState.Active)
                            {
                                <a asp-page="./TenantDisable" asp-route-id="@item!.Id">Disable</a>
                            }
                            @if(item.State != Core.Application.ApplicationTenantState.Removing
                            && item.State != Core.Application.ApplicationTenantState.Removed)
                            {
                                <a asp-page="./TenantEdit" asp-route-id="@item!.Id">Edit</a>
                                <a asp-page="./TenantDelete" asp-route-id="@item.Id">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </table>
        }
        <p>
            <a class="btn btn-primary" asp-page="./TenantCreate">Create</a>
        </p>
    </div>
</div>