@page
@inject IViewLocalizer Localizer
@model IndexModel
@{
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["CardTitle"] = Localizer["Your user profile"];
}
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="@Localizer["Please choose your username."]" disabled />
                <label asp-for="Username" class="form-label"></label>
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.GivenName" class="form-control" placeholder="@Localizer["Please enter your given name."]" autofocus />
                <label asp-for="Input.GivenName" class="form-label"></label>
                <span asp-validation-for="Input.GivenName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Surname" class="form-control" placeholder="@Localizer["Please enter your sur name."]" />
                <label asp-for="Input.Surname" class="form-label"></label>
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="@Localizer["Please enter your phone number."]" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>
                    @if (Model.Picture is not null)
                    {
                        <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Picture))">
                    }
                </p>
                <input asp-for="Input.ProfileFile" class="form-control" accept=".png,.jpg,.jpeg,.gif" />
            </div>
            <p></p>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
