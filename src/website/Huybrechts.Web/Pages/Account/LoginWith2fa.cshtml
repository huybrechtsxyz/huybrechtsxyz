@page
@inject IViewLocalizer Localizer
@model LoginWith2faModel
@{
    ViewData["Title"] = Localizer["Two-factor authentication"];
}
<div class="card shadow-lg">
    <div class="card-body p-4">

        <div class="text-center">
            <h1 class="h3">@ViewData["Title"]</h1>
            <p class="text-info">@Localizer["Your login is protected with an authenticator app. Enter your authenticator code below."]</p>
        </div>

        <form id="login2faForm" asp-route-returnUrl="@Model.ReturnUrl" class="mt-4" method="post">
            <input asp-for="RememberMe" type="hidden" />

            <div class="col-sm-6">
                <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" aria-required="true" placeholder="@Html.DisplayNameFor(model => model.Input.TwoFactorCode)" autofocus />
            </div>

            <div class="col-sm-6">
                <label asp-for="Input.RememberMachine" class="form-label">
                    <input asp-for="Input.RememberMachine" />
                    @Html.DisplayNameFor(m => m.Input.RememberMachine)
                </label>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="d-grid mt-5">
                <button id="forgotPasswordSubmit" type="submit" class="btn btn-primary btn-lg">@Localizer["Log in"]</button>
            </div>
        </form>

        <div class="d-flex align-items-center justify-content-between border-top pt-3 mt-3">
            <h5 class="m-0">@Localizer["Login with"]</h5>
            <div class="ms-3">
                <p>
                    Don't have access to your authenticator device? You can
                    <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
