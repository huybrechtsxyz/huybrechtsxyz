@page
@inject IStringLocalizer<Localization> SL
@model Huybrechts.Web.Pages.Features.Project.Component.CreateModel
@{
    ViewData["CardTitle"] = Model.Data.ProjectInfo.Name + " | " + Model.Data.ProjectDesign.Name + " | " + SL["ComponentCreateTitle"];
}
<partial name="_StatusResult" for="StatusMessage" />
<p class="text-info">
    @SL["ComponentCreateInfo"]
</p>

<div class="row">
    <div class="col-md-6">
        <form id="create-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Data.Id" />
            <input type="hidden" asp-for="Data.ProjectInfoId" />
            <input type="hidden" asp-for="Data.ParentId" />
            <div class="form-floating mb-3">
                <input type="hidden" asp-for="Data.ProjectDesignId" />
                <input asp-for="Data.ProjectDesign.Name" class="form-control" disabled />
                <label asp-for="Data.ProjectDesignId" class="form-label"></label>
                <span asp-validation-for="Data.ProjectDesignId" class="text-danger"></span>
            </div>
            @if(Model.Data.ParentId.HasValue && Model.Data.ParentInfo is not null)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Data.ParentInfo!.Name" class="form-control" disabled />
                    <label asp-for="Data.ParentId" class="form-label"></label>
                    <span asp-validation-for="Data.ParentId" class="text-danger"></span>
                </div>
            }
            <div class="form-floating mb-3">
                <input asp-for="Data.Name" class="form-control border-info" required />
                <label asp-for="Data.Name" class="form-label"></label>
                <span asp-validation-for="Data.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Description" class="form-control" />
                <label asp-for="Data.Description" class="form-label"></label>
                <span asp-validation-for="Data.Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.ComponentLevel"
                        asp-items="Html.GetEnumSelectList<Huybrechts.Core.Project.ComponentLevel>()"
                        class="form-select"></select>
                <label asp-for="Data.ComponentLevel" class="form-label"></label>
                <span asp-validation-for="Data.ComponentLevel" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.VariantType"
                        asp-items="Html.GetEnumSelectList<Huybrechts.Core.Project.VariantType>()"
                        class="form-select"></select>
                <label asp-for="Data.VariantType" class="form-label"></label>
                <span asp-validation-for="Data.VariantType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.SourceType"
                        asp-items="Html.GetEnumSelectList<Huybrechts.Core.Project.SourceType>()"
                        class="form-select"></select>
                <label asp-for="Data.SourceType" class="form-label"></label>
                <span asp-validation-for="Data.SourceType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Remark" class="form-control" />
                <label asp-for="Data.Remark" class="form-label"></label>
                <span asp-validation-for="Data.Remark" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <a class="w-30 btn btn-lg btn-secondary" asp-page="Index" asp-route-ProjectDesignId="@Model.Data.ProjectDesign.Id"><i class="bi bi-arrow-left-circle-fill"></i></a>
                <button id="create-button" type="submit" class="w-70 btn btn-lg btn-primary"><i class="bi bi-floppy-fill"></i></button>
            </div>
        </form>
    </div>
</div>

@section Breadcrumb {
    <li class="breadcrumb-item">@Model.Data.ProjectInfo.Name</li>
    <li class="breadcrumb-item"><a asp-page="/Features/Project/Design/Index" asp-route-ProjectInfoId="@Model.Data.ProjectInfo.Id">@Model.Data.ProjectDesign.Name</a></li>
    <li class="breadcrumb-item"><a asp-page="/Features/Project/Component/Index" asp-route-ProjectDesignId="@Model.Data.ProjectDesignId">@SL["Components"]</a></li>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}