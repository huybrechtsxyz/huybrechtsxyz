@page
@using Huybrechts.Core.Setup
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Huybrechts.Web.Pages.Features.Setup.Localization> SL
@model Huybrechts.Web.Pages.Features.Setup.NoSerie.EditModel
@{
    ViewData["CardTitle"] = SL["NoSerieEditTitle"];
    ViewData["ActivePage"] = ManageNavPages.NoSerie;
}

<partial name="_StatusResult" for="StatusMessage" />
<p class="text-info">
    @SL["NoSerieEditInfo"]
</p>

<div class="row">
    <div class="col-md-6">
        <form id="edit-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-floating mb-3">
                <select asp-for="Data.TypeOf"
                        asp-items="Model.TypeOfOptions"
                        class="form-select border-info" required></select>
                <label asp-for="Data.TypeOf" class="form-label"></label>
                <span asp-validation-for="Data.TypeOf" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.TypeValue"
                        asp-items="Model.Data.SetupTypes?.Select(p => new SelectListItem
                                {
                                    Value = p.Name,
                                    Text = p.Name
                                }).ToList()"
                        class="form-select border-info">
                    <option id=""></option>
                </select>
                <label asp-for="Data.TypeValue" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Format" class="form-control border-info" required />
                <label asp-for="Data.Format" class="form-label"></label>
                <span asp-validation-for="Data.Format" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.StartCounter" class="form-control border-info" required />
                <label asp-for="Data.StartCounter" class="form-label"></label>
                <span asp-validation-for="Data.StartCounter" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Increment" class="form-control border-info" required />
                <label asp-for="Data.Increment" class="form-label"></label>
                <span asp-validation-for="Data.Increment" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Maximum" class="form-control border-info" required />
                <label asp-for="Data.Maximum" class="form-label"></label>
                <span asp-validation-for="Data.Maximum" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.AutomaticReset" class="form-control border-info" />
                <label asp-for="Data.AutomaticReset" class="form-label"></label>
                <span asp-validation-for="Data.AutomaticReset" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.LastCounter" class="form-control border-info" disabled />
                <label asp-for="Data.LastCounter" class="form-label"></label>
                <span asp-validation-for="Data.LastCounter" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.LastPrefix" class="form-control border-info" disabled />
                <label asp-for="Data.LastPrefix" class="form-label"></label>
                <span asp-validation-for="Data.LastPrefix" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.LastCounter" class="form-control border-info" disabled />
                <label asp-for="Data.LastCounter" class="form-label"></label>
                <span asp-validation-for="Data.LastCounter" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.IsDisabled" class="form-control border-info" />
                <label asp-for="Data.IsDisabled" class="form-label"></label>
                <span asp-validation-for="Data.IsDisabled" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Description" class="form-control" />
                <label asp-for="Data.Description" class="form-label"></label>
                <span asp-validation-for="Data.Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <a class="w-30 btn btn-lg btn-secondary" asp-page="Index"><i class="bi bi-arrow-left-circle-fill"></i></a>
                <button id="edit-button" type="submit" class="w-70 btn btn-lg btn-primary"><i class="bi bi-floppy-fill"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}