@page
@using Huybrechts.Core.Setup
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Huybrechts.Web.Pages.Features.Setup.Localization> SL
@model Huybrechts.Web.Pages.Features.Setup.NoSerie.DeleteModel
@{
    ViewData["CardTitle"] = SL["NoSerieDeleteTitle"];
    ViewData["ActivePage"] = ManageNavPages.NoSerie;
}

<partial name="_StatusResult" for="StatusMessage" />
<p class="text-info">
    @SL["NoSerieDeleteInfo"]
</p>

<div class="row">
    <div class="col-md-6">
        <form id="delete-form" method="post">
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-floating mb-3">
                <input asp-for="Data.TypeOf" class="form-control" disabled />                
                <label asp-for="Data.TypeOf" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.TypeCode" class="form-control border-info" disabled />
                <label asp-for="Data.TypeCode" class="form-label"></label>
                <span asp-validation-for="Data.TypeCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.TypeValue" class="form-control border-info" disabled />
                <label asp-for="Data.TypeValue" class="form-label"></label>
                <span asp-validation-for="Data.TypeValue" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Format" class="form-control border-info" disabled />
                <label asp-for="Data.Format" class="form-label"></label>
                <span asp-validation-for="Data.Format" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Counter" class="form-control border-info" disabled />
                <label asp-for="Data.Counter" class="form-label"></label>
                <span asp-validation-for="Data.Counter" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Maximum" class="form-control border-info" disabled />
                <label asp-for="Data.Maximum" class="form-label"></label>
                <span asp-validation-for="Data.Maximum" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.IsDisabled" class="form-control border-info" disabled />
                <label asp-for="Data.IsDisabled" class="form-label"></label>
                <span asp-validation-for="Data.IsDisabled" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Description" class="form-control" disabled />
                <label asp-for="Data.Description" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <a class="w-30 btn btn-lg btn-secondary" asp-page="Index"><i class="bi bi-arrow-left-circle-fill"></i></a>
                <button id="delete-button" type="submit" class="w-70 btn btn-lg btn-primary"><i class="bi bi-trash2-fill"></i></button>
            </div>
        </form>
    </div>
</div>