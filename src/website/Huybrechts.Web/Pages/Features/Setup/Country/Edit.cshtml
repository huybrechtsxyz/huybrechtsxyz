@page
@using Huybrechts.Core.Setup
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Huybrechts.Web.Pages.Features.Setup.Localization> SL
@model Huybrechts.Web.Pages.Features.Setup.Country.EditModel
@{
    ViewData["CardTitle"] = SL["CountryEditTitle"];
    ViewData["ActivePage"] = ManageNavPages.Country;
}

<partial name="_StatusResult" for="StatusMessage" />
<p class="text-info">
    @SL["CountryEditInfo"]
</p>

<div class="row">
    <div class="col-md-6">
        <form id="edit-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-floating mb-3">
                <input asp-for="Data.Code" class="form-control border-info" required />
                <label asp-for="Data.Code" class="form-label"></label>
                <span asp-validation-for="Data.Code" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Name" class="form-control border-info" required />
                <label asp-for="Data.Name" class="form-label"></label>
                <span asp-validation-for="Data.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.TranslatedName" class="form-control border-info" required />
                <label asp-for="Data.TranslatedName" class="form-label"></label>
                <span asp-validation-for="Data.TranslatedName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.SetupLanguageId"
                        asp-items="Model.Data.Languages?.Select(p => new SelectListItem
                                {
                                    Value = p.Id.ToString(),
                                    Text = p.Name
                                }).ToList()"
                        class="form-select">
                    <option id="@Ulid.Empty">@SL["Select"]</option>
                </select>
                <label asp-for="Data.SetupLanguageId" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.SetupCurrencyId"
                        asp-items="Model.Data.Currencies?.Select(p => new SelectListItem
                                {
                                    Value = p.Id.ToString(),
                                    Text = p.Name
                                }).ToList()"
                        class="form-select">
                    <option id="@Ulid.Empty">@SL["Select"]</option>
                </select>
                <label asp-for="Data.SetupCurrencyId" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Description" class="form-control" />
                <label asp-for="Data.Description" class="form-label"></label>
                <span asp-validation-for="Data.Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <a class="w-30 btn btn-lg btn-secondary" asp-page="Index"><i class="bi bi-arrow-left-circle-fill"></i></a>
                <button id="edit-button" type="submit" class="w-70 btn btn-lg btn-primary"><i class="bi bi-floppy-fill"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}