@page
@using Huybrechts.Core.Setup
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Huybrechts.Web.Pages.Features.Setup.Localization> SL
@model Huybrechts.Web.Pages.Features.Setup.Unit.CreateModel
@{
    ViewData["CardTitle"] = SL["UnitCreateTitle"];
    ViewData["ActivePage"] = ManageNavPages.Unit;
}

<partial name="_StatusResult" for="StatusMessage" />
<p class="text-info">
    @SL["UnitCreateInfo"]
</p>

<div class="row">
    <div class="col-md-6">
        <form id="create-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-floating mb-3">
                <input asp-for="Data.Code" class="form-control" />
                <label asp-for="Data.Code" class="form-label"></label>
                <span asp-validation-for="Data.Code" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.UnitType"
                        asp-items="Html.GetEnumSelectList<SetupUnitType>()"
                        class="form-select"></select>
                <label asp-for="Data.UnitType" class="form-label"></label>
                <span asp-validation-for="Data.UnitType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Name" class="form-control" />
                <label asp-for="Data.Name" class="form-label"></label>
                <span asp-validation-for="Data.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Description" class="form-control" />
                <label asp-for="Data.Description" class="form-label"></label>
                <span asp-validation-for="Data.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="checkbox" asp-for="Data.IsBase" class="form-check-input" />
                <label asp-for="Data.IsBase" class="form-check-label"></label>
                <span asp-validation-for="Data.IsBase" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Precision" class="form-control" />
                <label asp-for="Data.Precision" class="form-label"></label>
                <span asp-validation-for="Data.Precision" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.PrecisionType"
                        asp-items="Html.GetEnumSelectList<MidpointRounding>()"
                        class="form-select"></select>
                <label asp-for="Data.PrecisionType" class="form-label"></label>
                <span asp-validation-for="Data.PrecisionType" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Factor" class="form-control" />
                <label asp-for="Data.Factor" class="form-label"></label>
                <span asp-validation-for="Data.Factor" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Remark" class="form-control" />
                <label asp-for="Data.Remark" class="form-label"></label>
                <span asp-validation-for="Data.Remark" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <a class="w-30 btn btn-lg btn-secondary" asp-page="./Index"><i class="bi bi-arrow-left-circle-fill"></i></a>
                <button id="create-button" type="submit" class="w-70 btn btn-lg btn-primary"><i class="bi bi-floppy-fill"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}