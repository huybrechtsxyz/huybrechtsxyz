@page
@using Huybrechts.Core.Setup
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Huybrechts.Web.Pages.Features.Setup.Localization> SL
@model Huybrechts.Web.Pages.Features.Setup.State.DeleteModel
@{
    ViewData["CardTitle"] = SL["StateDeleteTitle"];
    ViewData["ActivePage"] = ManageNavPages.State;
}

<partial name="_StatusResult" for="StatusMessage" />
<p class="text-info">
    @SL["StateDeleteInfo"]
</p>

<div class="row">
    <div class="col-md-6">
        <form id="delete-form" method="post">
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-floating mb-3">
                <input asp-for="Data.TypeOf" class="form-control" disabled />                
                <label asp-for="Data.TypeOf" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Sequence" class="form-control" disabled />
                <label asp-for="Data.Sequence" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Name" class="form-control" disabled />
                <label asp-for="Data.Name" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="Data.StateType"
                        asp-items="Html.GetEnumSelectList<StateType>()"
                        class="form-control" disabled></select>
                <label asp-for="Data.StateType" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Data.Description" class="form-control" disabled />
                <label asp-for="Data.Description" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <a class="w-30 btn btn-lg btn-secondary" asp-page="Index"><i class="bi bi-arrow-left-circle-fill"></i></a>
                <button id="delete-button" type="submit" class="w-70 btn btn-lg btn-primary"><i class="bi bi-trash2-fill"></i></button>
            </div>
        </form>
    </div>
</div>