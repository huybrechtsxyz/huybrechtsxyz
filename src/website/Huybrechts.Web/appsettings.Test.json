{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DatabaseContext": "Server=postgres;Port=5432;Database=applicationdb;User Id={username};Password={password};"
  },
  "Environment": {
    "DatabaseType": "PostgreSQL",
    "Username": "APP_HOST_USERNAME_FILE",
    "Password": "APP_HOST_PASSWORD_FILE"
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            { "Name": "Console" },
            {
              "Name": "File",
              "Args": {
                "path": "logs/log.txt",
                "rollingInterval": "Day",
                "blockWhenFull": true
              }
            }
          ]
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Information"
      }
    }
  }
}
